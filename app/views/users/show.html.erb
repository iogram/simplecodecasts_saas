<div class="column">
    <div class="col-md-6 col-md-offset-3">
        <div class="well">
            <%= 'Name: ' %>
            <%= @user.profile.first_name.capitalize %> <%= @user.profile.last_name.capitalize %><br/>
            <%= 'Job Title: ' %>
            <%= @user.profile.job_title %><br/>
            <% if current_user.plan_id === 2 %>
                <%= 'Phone Number: ' %>
                <%= @user.profile.phone_number %><br/>
                <%= 'Email: ' %>
                <%= @user.profile.contact_email %><br/>
            <% end %>
            <%= 'Description: ' %>
            <%= @user.profile.description %><br/>   
        </div>
    </div>
</div>